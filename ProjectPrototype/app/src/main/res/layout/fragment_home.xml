<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="176dp"
            android:gravity="center"
            android:text="KATEGORIEN"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


    <ImageView
        android:id="@+id/ivWhiteWine"
        android:layout_width="330dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="213dp"
        android:contentDescription="Weisswein Kategorie"
        app:srcCompat="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/ivRedWine"
        android:layout_width="330dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:contentDescription="Rotwein Kategorie"
        app:srcCompat="@android:color/holo_red_dark" />

    <ImageView
        android:id="@+id/ivRoseWine"
        android:layout_width="330dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:contentDescription="Rosewein Kategorie"
        app:srcCompat="@android:color/holo_orange_dark" />


</RelativeLayout>